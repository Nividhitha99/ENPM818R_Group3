# Development Dockerfile for Uploader Service
# This enables live code reload with bind mounts
# DO NOT use in production

FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Install curl for healthcheck (optional)
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Expose port
EXPOSE 8000

# Use uvicorn with --reload for live code reload
# Code will be bind-mounted from host, so we don't COPY it here
# Increase timeout and body size for large file uploads
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--timeout-keep-alive", "300", "--limit-max-requests", "1000", "--limit-concurrency", "1000"]